<!DOCTYPE html>
<html>
  <head>
    <title>DemoRailsAuth</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="authentication-bar">
      <%- unless session[:account_id].nil? %>
        <%= link_to "Sign Out", authentication_path, method: "delete" %>
      <%- end %>
    </div>
    <% if flash[:alert] %>
      <div class="flash flash-alert"><%= flash[:alert] %></div>
    <% end %>
    <% if flash[:notice] %>
      <div class="flash flash-notice"><%= flash[:notice] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
